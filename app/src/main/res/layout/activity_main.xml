<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/doBtn"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#6BAAA4"
            android:onClick="PlaySoundOutLoud"
            android:text="DO" />

        <Button
            android:id="@+id/reBtn"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#6BAAA4"
            android:onClick="PlaySoundOutLoud"
            android:text="RE" />

        <Button
            android:id="@+id/miBtn"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#6BAAA4"
            android:onClick="PlaySoundOutLoud"
            android:text="MI" />

        <Button
            android:id="@+id/faBtn"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#6BAAA4"
            android:onClick="PlaySoundOutLoud"
            android:text="FA" />

        <Button
            android:id="@+id/solBtn"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#6BAAA4"
            android:onClick="PlaySoundOutLoud"
            android:text="SOL"
            android:textSize="13sp" />

        <Button
            android:id="@+id/laBtn"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#6BAAA4"
            android:onClick="PlaySoundOutLoud"
            android:text="LA" />

        <Button
            android:id="@+id/siBtn"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#6BAAA4"
            android:onClick="PlaySoundOutLoud"
            android:text="SI" />

        <Button
            android:id="@+id/doOctaveBtn"
            android:layout_width="60dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#6BAAA4"
            android:onClick="PlaySoundOutLoud"
            android:text="DO" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="180dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="268dp"
                android:layout_marginTop="10dp"
                android:text="DoReMi"
                android:textSize="36sp" />

            <Button
                android:id="@+id/playBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="156dp"
                android:layout_marginRight="33dp"
                android:layout_weight="1"
                android:backgroundTint="#D5376D"
                android:onClick="PlaySequence"
                android:text="Play"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/fileAccessInput"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Access to files" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F44336"
                android:onClick="Write"
                android:text="Save"
                android:textSize="16sp" />

            <Button
                android:id="@+id/loadBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#03A9F4"
                android:onClick="Read"
                android:text="Load"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>